<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/new_gray">

    <TextView
        android:id="@+id/typeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Type"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/typeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/typeTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/orange"/>

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/typeEditText"
        android:layout_marginStart="16dp"
        android:text="Price"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/typeEditText"
        android:layout_toRightOf="@id/descriptionTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/orange"/>

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionEditText"
        android:layout_marginStart="16dp"
        android:text="Price"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/priceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionEditText"
        android:layout_toRightOf="@id/priceTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/orange"/>

    <TextView
        android:id="@+id/imageUrlTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceEditText"
        android:layout_marginStart="16dp"
        android:text="Price"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/imageUrlEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceEditText"
        android:layout_toRightOf="@id/imageUrlTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/orange"/>

    <Button
        android:id="@+id/executeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageUrlEditText"
        android:layout_marginTop="25dp"
        android:text="Execute"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:backgroundTint="@color/main_color" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/new_gray"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/home_unfilled_icon"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/favorites_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/blue_heart_unfilled_icon"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/notification_unfilled_icon"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/manager_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/manager_icon"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>