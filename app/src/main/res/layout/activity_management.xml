<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/main_color">

    <!-- Spinner -->
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dropdown_menu_icon"
        android:entries="@array/options_array" />

    <!-- Main Text -->
    <TextView
        android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:text="Which type of item would you like to Add, Edit or Remove."
        android:textAlignment="center" />

    <!-- Grid Layout -->
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainText"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_centerHorizontal="true">

        <!-- Image 1 -->
        <LinearLayout android:id="@+id/menu_option_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/pink">


            <TextView
                android:id="@+id/menu_option_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26dp"
                android:gravity="center"
                android:text="Tour"/>

            <ImageView
                android:id="@+id/menu_option_icon1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tour_png"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <!-- Image 2 -->
        <LinearLayout android:id="@+id/menu_option_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/pink">


            <TextView
                android:id="@+id/menu_option_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26dp"
                android:gravity="center"
                android:text="Hotel"/>

            <ImageView
                android:id="@+id/menu_option_icon2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/hotel_png"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <!-- Image 3 -->
        <LinearLayout android:id="@+id/menu_option_layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/pink">


            <TextView
                android:id="@+id/menu_option_title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26dp"
                android:gravity="center"
                android:text="Food"/>

            <ImageView
                android:id="@+id/menu_option_icon3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/food_png"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <!-- Image 4 -->
        <LinearLayout android:id="@+id/menu_option_layout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/pink">


            <TextView
                android:id="@+id/menu_option_title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26dp"
                android:gravity="center"
                android:text="Transport"/>

            <ImageView
                android:id="@+id/menu_option_icon4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/transport_png"
                android:adjustViewBounds="true" />

        </LinearLayout>
    </GridLayout>
</RelativeLayout>