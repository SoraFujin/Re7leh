<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/new_gray">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Name"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nameTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameEditText"
        android:layout_marginStart="16dp"
        android:text="Location"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/locationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameEditText"
        android:layout_toRightOf="@id/locationTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/ratingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationEditText"
        android:layout_marginStart="16dp"
        android:text="Rating"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/ratingEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationEditText"
        android:layout_toRightOf="@id/ratingTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/imageNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingEditText"
        android:layout_marginStart="16dp"
        android:text="Image Name"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/imageNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingEditText"
        android:layout_toRightOf="@id/imageNameTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/executeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageNameEditText"
        android:layout_marginTop="25dp"
        android:text="Execute"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:backgroundTint="@color/main_color" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/new_gray"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/home_unfilled_icon"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/favorites_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/blue_heart_unfilled_icon"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/notification_unfilled_icon"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/manager_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/manager_icon"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>